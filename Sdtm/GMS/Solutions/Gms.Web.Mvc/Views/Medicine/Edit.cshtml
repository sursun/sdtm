@using Gms.Domain
@model Gms.Domain.Medicine

@{
    Layout = null;
}

<form id="departmentform" method="post" action="/Medicine/SaveOrUpdate">

    <table>
        
        <tr>
            <td>类别</td>
            <td>
                @{
                    int typeId = 0;
                    string typeName = "";
                    if (Model != null && Model.MedicineType != null)
                    {
                        typeId = Model.MedicineType.Id;
                        typeName = Model.MedicineType.Name;
                    }
                }

                <input id="Type_Id" name="MedicineType.Id" style="display: none" value="@typeId" />
                <input id="Type_Name" disabled="disabled" value="@typeName" />

                <a id="selectType" href="#/CommonCode/TypeInfo?type=@CommonCodeType.药品类别">选择类别</a>
            </td>
        </tr>
        
        <tr>
            <td>常用名称</td>
            <td>
 
                @Html.TextBoxFor(c => c.NormalName)
               
