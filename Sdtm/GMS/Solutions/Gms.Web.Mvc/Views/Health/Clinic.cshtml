@using Gms.Domain
@model Gms.Domain.Patient
@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}


<body class="easyui-layout">
    
    <div data-options="region:'center'" >
        
        <input id="PatientId" value="@Model.Id" style="display: none">
    
        <div id="toolbar" style="padding: 5px; height: auto">
            <div style="margin-bottom: 5px">
                <a id="btnAdd" href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true">添加</a>
                <a id="btnDel" href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true">删除</a>
            </div>
        </div>
     
        <table id="clinic_search_list"  url="@Url.Action("ClinicList","Health",new{PatientId=@Model.Id})" >
            
        </table>
  
    </div>

    <div data-options="region:'east'" style="width:400px;padding:10px;">
        <div id="EmptyDiv">
            点击左侧记录，显示记录详细信息。
        </div>
        
        <div id="DetailDiv" style="display: none;">
            
        </div>
        
        <div id="editdlg"></div>

    </div>
    
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/Health/Clinic.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Clinic.Init();
    });

</script>



