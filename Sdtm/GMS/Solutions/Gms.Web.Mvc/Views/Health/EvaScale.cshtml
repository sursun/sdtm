@using Gms.Domain
@using Gms.Domain.Health
@model Gms.Domain.Patient
@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>
    
    <input id="PatientId" value="@Model.Id" style="display: none">
    
    <div id="toolbar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 5px">
            <a id="btnAdd" href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true">添加</a>
            <a id="btnDel" href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true">删除</a>
        </div>
    </div>
     
    <table id="evascale_search_list"  url="@Url.Action("EvaScaleList", "Health", new { PatientId = @Model.Id })" >
            
    </table>
  
    <div id="selectTypeDlg">
        <div style="padding: 20px;">
            <select id="typeCombo" style="width:200px;">
                <option value="-1">请选择</option>
                <option value="0">简易智能状态评定表MMSE</option>
                <option value="1">Zung抑郁评定量表</option>
                <option value="2">Zung焦虑自我评价表</option>
            </select>
        </div>
    </div>

    <div id="editdlg"></div>
    
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/Health/EvaScale.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        EvaScale.Init();
    });

</script>



