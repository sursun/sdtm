@using Gms.Domain

@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>

    <div id="toolbar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 5px">
            <a href="#" class="easyui-linkbutton add" forgid="doctor_search_list" iconcls="icon-add" plain="true">添加</a>
            <a href="#" class="easyui-linkbutton del" forgid="doctor_search_list" iconcls="icon-remove" plain="true">删除</a>
            <a href="#" class="easyui-linkbutton edit" forgid="doctor_search_list" iconcls="icon-edit" plain="true">修改</a>
            <a href="#" class="easyui-linkbutton reset" plain="true">重置密码</a>
        </div>
        <div>
            工号：<input name="LoginName" class="messager-input" style="width: 80px" />
            姓名：<input name="RealName" class="messager-input" style="width: 80px" />
            <a href="#" id="doctor_search" class="easyui-linkbutton search" iconcls="icon-search">搜索</a>
        </div>
    </div>
     
    <table id="doctor_search_list" url="@Url.Action("List","Doctor")" edit="@Url.Action("Get","Doctor")" del="@Url.Action("Delete","Doctor")">
            
    </table>
        
    <div id="doctor_search_edit" dlgtitle="医生信息" style="display: none">
        <div id="doctor_search_edit_content">
            @{
                Html.RenderPartial("Edit", new Doctor());
            }
        </div>
    </div>
    
     @*记录选择的医生，便于其他页面调用*@
    <div style="display: none;">
        <input id="doctor_selected_Id" />
        <input id="doctor_selected_CodeNo" />
    </div>
    
    <div id="frameeditdlg" style="padding:10px;">
        <iframe style='width: 100%;height:100%;border: none;' frameborder="no"></iframe>
    </div> 
        
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/Doctor/Doctor.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Doctor.Init();
    });

</script>


